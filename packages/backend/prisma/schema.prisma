generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  password  String
  email     String  @unique
  firstName String?
  lastName  String?

  accessToken  String
  refreshToken String?

  role Role @default(USER)

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
