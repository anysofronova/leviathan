{
  "name": "leviathan",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/anysofronova/leviathan",
  "repository": {
    "type": "git",
    "url": "https://github.com/anysofronova/leviathan"
  },
  "author": {
    "name": "Anna Frawn",
    "url": "https://github.com/anysofronova"
  },
  "keywords": [
    "monorepo",
    "workspace",
    "nextjs",
    "nx"
  ],
  "engines": {
    "node": "^14.13.1 || >=16.0.0 || >=18.0.0",
    "yarn": ">=1.22.0",
    "npm": "please-use-yarn"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "packages/*",
    "libs/*",
    "tools/*"
  ],
  "scripts": {
    "start:backend": "nx start:dev backend",
    "start:dev": "nx run-many --parallel --target=serve --projects=backend,frontend",
    "format": "nx run-many --target=format",
    "lint": "nx run-many --target=lint",
    "test": "nx run-many --target=test",
    "build:frontend": "nx build frontend",
    "build:backend": "nx build backend",
    "clean": "nx run-many --target=clean",
    "clean-node_modules": "yarn dlx rimraf '**/node_modules'",
    "check-install": "yarn dlx @yarnpkg/doctor .",
    "postinstall": "is-ci || yarn husky install",
    "release-version": "yarn changeset version && yarn nx format:write",
    "release-publish": "yarn nx affected:build && yarn changeset publish"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@emotion/babel-plugin": "11.10.5",
    "@nrwl/cypress": "15.6.3",
    "@nrwl/eslint-plugin-nx": "15.6.3",
    "@nrwl/jest": "15.6.3",
    "@nrwl/js": "15.6.3",
    "@nrwl/linter": "15.6.3",
    "@nrwl/next": "^15.6.3",
    "@nrwl/react": "15.6.3",
    "@testing-library/react": "13.4.0",
    "@types/jest": "28.1.1",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-jest": "28.1.1",
    "cypress": "^12.2.0",
    "eslint": "~8.15.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "lint-staged": "13.1.1",
    "nx": "15.6.3",
    "prettier": "2.8.3",
    "prettier-plugin-tailwindcss": "0.2.2",
    "react-test-renderer": "18.2.0",
    "ts-jest": "28.0.5",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "vite": "4.1.1",
    "vite-tsconfig-paths": "4.0.5"
  },
  "dependencies": {
    "@emotion/react": "11.10.5",
    "@emotion/server": "11.10.0",
    "@emotion/styled": "11.10.5",
    "next": "13.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tslib": "^2.3.0"
  }
}
